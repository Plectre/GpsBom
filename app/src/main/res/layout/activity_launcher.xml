<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:weightSum="1">


        <TextView
            android:id="@+id/txt_titre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="@dimen/h1"
            android:layout_weight="0.22" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:background="@color/colorButton"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="6dp"
            android:padding="@dimen/padding"
            android:gravity="center"
            android:text="@string/demarrer_service"
            android:layout_margin="@dimen/margin"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="-149dp" />

        <ImageView
            android:id="@+id/image_satellite"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:contentDescription="img_satt"
            android:padding="@dimen/padding"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/gps_off"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txt_gps_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.46"
            android:gravity="center"
            android:text=""/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_fin_position"
                android:background="@color/colorButton"
                android:padding="@dimen/padding"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:text="@string/recherche_position"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
