<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin"
        android:layout_weight="0.33"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txt_latitude"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="0.5"
            android:gravity="center"
            android:maxLength="10"
            android:textSize="@dimen/textView" />

        <TextView
            android:id="@+id/txt_longitude"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="0.5"
            android:maxLength="10"
            android:gravity="center"
            android:textSize="@dimen/textView" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.26"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/radio_hlp"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:padding="@dimen/padding_radio"
            android:text="@string/haut_le_pieds"
            android:textSize="@dimen/h1" />

        <RadioButton
            android:id="@+id/radio_ulat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="@dimen/padding_radio"
            android:layout_weight="1"
            android:text="@string/uni_lateral_droit"
            android:textSize="@dimen/h1" />

        <RadioButton
            android:id="@+id/radio_biLat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"

            android:layout_weight="1"
            android:text="@string/bi_lateral"
            android:textSize="@dimen/h1" />

        <RadioButton
            android:id="@+id/radio_m_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="@dimen/padding_radio"
            android:layout_weight="1"
            android:text="@string/marche_arriere"
            android:textSize="@dimen/h1" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.33"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt_plot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txt_satus_gps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/init_status_gps"
            android:textAlignment="center"
            android:textSize="@dimen/h1" />
        <!--
                <ImageView
                    android:id="@+id/img_satellite"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin"
                    android:background="@drawable/probe" />
                    -->

        <TextView
            android:id="@+id/txt_typeDeCollecte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/tirets"
            android:textSize="75sp" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0.50"
        android:orientation="horizontal"

        android:padding="@dimen/padding">

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="2dp"
            android:layout_weight="0.33"
            android:background="@color/colorButton"
            android:text="@string/stop" />

        <Button
            android:id="@+id/btn_rec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="2dp"
            android:layout_weight="0.33"
            android:background="@color/colorButton"
            android:text="@string/record" />

    </LinearLayout>

</LinearLayout>