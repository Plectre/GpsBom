<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_satus_gps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="@dimen/h1"
            android:text="BOM GPS"/>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.33"
        android:orientation="horizontal"
        android:padding="5dp">


        <RadioButton
            android:id="@+id/radio_hlp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="HLP"
            android:textSize="@dimen/h1" />

        <RadioButton
            android:id="@+id/radio_ulat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"

            android:layout_weight="1"
            android:text="U-LAT"
            android:textSize="@dimen/h1" />

        <RadioButton
            android:id="@+id/radio_biLat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"

            android:layout_weight="1"
            android:text="BI-LAT"
            android:textSize="@dimen/h1" />

        <RadioButton
            android:id="@+id/radio_m_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"

            android:layout_weight="1"
            android:text="M-A"
            android:textSize="@dimen/h1" />

    </RadioGroup>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="0.33"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_satellite"
            android:layout_width="141dp"
            android:layout_height="133dp"
            android:layout_gravity="center"
            android:background="@drawable/gps_off" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_weight="0.33"

        android:padding="5dp">

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.33"
            android:text="Stop" />

        <Button
            android:id="@+id/btn_rec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="0.33"
            android:text="Rec" />

    </LinearLayout>

</LinearLayout>